# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (MySQL with Prisma)
DATABASE_URL="mysql://root:root@localhost:3307/ethio_ai"

# Direct MySQL Connection (for non-Prisma connections)
DB_HOST=localhost
DB_PORT=3307
DB_USER=root
DB_PASS=root
DB_NAME=ethio_ai

# Redis Configuration (for notifications and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_ACCESS_SECRET=your-access-token-secret-different-from-jwt-secret
JWT_REFRESH_SECRET=your-refresh-token-secret-also-different
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Client Configuration
CLIENT_URL=http://localhost:3002
FRONTEND_URL=http://localhost:3002

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ethioai.com

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret
MAX_FILE_SIZE=5242880

# Payment Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
CHAPA_SECRET_KEY=your-chapa-secret-key
CHAPA_PUBLIC_KEY=your-chapa-public-key

# Firebase Configuration (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info

# AI Services Configuration
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000
OPENAI_ORGANIZATION_ID=your-org-id-optional

# Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307
ANTHROPIC_MAX_TOKENS=2000

# Google Gemini
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GOOGLE_AI_MODEL=gemini-1.5-flash

# Azure OpenAI (Enterprise)
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Hugging Face
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Stability AI
STABILITY_API_KEY=your-stability-ai-key

# ElevenLabs (Voice)
ELEVENLABS_API_KEY=your-elevenlabs-key

# Mapbox (for advanced mapping)
MAPBOX_SECRET_TOKEN=your-mapbox-secret-token

# External APIs
WEATHER_API_KEY=your-weather-api-key
CURRENCY_API_KEY=your-currency-api-key
TRANSLATION_API_KEY=your-translation-api-key

# Rate Limiting & Security
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000
API_KEY_ENCRYPTION_SECRET=your-encryption-secret-for-api-keys